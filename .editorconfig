# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = spaces
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[*.py]
indent_style = spaces
indent_size = 4
